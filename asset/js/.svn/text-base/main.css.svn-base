#more_button {
    text-align: center;
    text-transform: uppercase;
    font-weight: bold;
    margin: 0; 
    padding: 10px;
    border: 1px solid #b0281a;
    color: white;
    text-shadow: 0 1px rgba(0,0,0,0.3);
    background-color: #c53727;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#dd4b39),to(#c53727));
    background-image: -webkit-linear-gradient(top,#dd4b39,#c53727);
    background-image: -moz-linear-gradient(top,#dd4b39,#c53727);
    background-image: -ms-linear-gradient(top,#dd4b39,#c53727);
    background-image: -o-linear-gradient(top,#dd4b39,#c53727);
    background-image: linear-gradient(top,#dd4b39,#c53727);
    -webkit-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -moz-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -ms-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -o-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    cursor: pointer;
}

#more_button:hover {
    text-align: center;
    font-weight: bold;
    border: 1px solid #b0281a;
    color: white;
    text-shadow: 0 1px rgba(0,0,0,0.3);
    background-color: #fe815f;
    background-image: -webkit-gradient(linear,left top,left bottom,from(#dd4b39),to(#fe815f));
    background-image: -webkit-linear-gradient(top,#dd4b39,#fe815f);
    background-image: -moz-linear-gradient(top,#dd4b39,#fe815f);
    background-image: -ms-linear-gradient(top,#dd4b39,#fe815f);
    background-image: -o-linear-gradient(top,#dd4b39,#fe815f);
    background-image: linear-gradient(top,#dd4b39,#fe815f);
    -webkit-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -moz-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -ms-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    -o-box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    box-shadow: 0 1px 1px rgba(0,0,0,0.2);
}

#more_loading {
    text-align: center;
    text-transform: uppercase;
    font-weight: bold;
    margin: 0; 
    padding: 1px;
    color: white;
    text-shadow: 0 1px rgba(0,0,0,0.3);
    cursor: pointer;
}